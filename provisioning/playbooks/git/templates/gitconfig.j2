[core]
  editor = {{ git_coreeditor|default('vi') }}

[user]
  name = {{ git_username }}
  email = {{ git_usermail }}

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files

# Show files ignored by git:
ign = ls-files -o -i --exclude-standard